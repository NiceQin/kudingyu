/* pages/course/course.wxss */
page {
    padding: 24rpx;
    background-color: #F5F7FB;
}
.item {
    width: 702rpx;
    height: 213rpx;
    display: flex;
    justify-content: space-around;
    align-items: center;
    margin-bottom: 28rpx;
    background-color: #fff;
    box-sizing: border-box;
     border-radius: 10rpx;
     box-shadow: 1rpx 0rpx 46rpx rgba(234, 234, 234, 0.47);
}
.item .left {
    display: flex;
    align-items: center;

}
.item .left image {
    width:151rpx;
    height:151rpx;
    margin-right: 45rpx;
}
.item .left .title {
    font-size:32rpx;
    font-family:PingFangSC-Regular;
    color:rgba(51, 51, 51, 1);
    display: block;
}
.item .left .sub-title {
    font-size:22rpx;
    font-family:PingFangSC-Light;
    color:rgba(162, 162, 162, 1);
    display: block;
}
.item .right button {
    width:154rpx;
    height:50rpx;
    background:rgba(255, 84, 124, 1);
    border-radius:6rpx;
    font-size:21rpx;
    color:rgba(255, 255, 255, 1);
}
.item .right .full {
  width: 154rpx;
  height: 50rpx;
  background: rgba(202, 202, 202, 1);
  border-radius: 6rpx;
}